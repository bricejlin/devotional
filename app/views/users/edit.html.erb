<% provide(:title, "Edit user") %>
<div class="static">
	<h1>Update your profile</h1>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div id="field">
      <fieldset>
        <%= render 'fields', f: f %>
        
        <div class="row submit">
          <div class="columns">
            <%= f.submit "Save changes", class: "button" %>
          </div>
        </div>

        <div class="row submit">
          <div class="columns">
            <%= gravatar_for @user %>
            <a href="http://gravatar.com/emails">change</a>
          </div>
        </div>
    </fieldset>
  <% end %>

</div>