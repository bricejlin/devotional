<% provide(:title, "Edit user") %>
<div class="static">
	<h1>Update your profile</h1>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= render 'fields', f: f %>
    
    <div class="row">
      <div class="columns">
        <%= f.submit "Save changes", class: "button" %>
      </div>
    </div>

    <div class="row">
      <div class="columns">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails">change</a>
      </div>
    </div>
  <% end %>

</div>