<% provide(:title, @user.name) %>
<div class="row">
	<div class="six columns">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
  </div>
</div>

<div class="row req">
	<div class="large-6 columns">
		<div class="row">
			<div class="large-8 columns left"><h3>Requests (<%= @user.requests.count %>)</h3></div>
		  <div class="large-4 columns right"><%= render 'follow_form' if signed_in? %></div>
		</div>
    <div class="row">
			<% if @user.requests.any? %>
				<ol class="requests">
					<%= render @requests %>
				</ol>
				<%= will_paginate @requests, id: "request_pagination" %>
			<% end %>
   	</div>
  </div>
</div>